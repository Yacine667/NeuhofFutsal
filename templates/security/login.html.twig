{% extends 'base.html.twig' %}

{% block title %}Connexion ⚽️{% endblock %}

{% block body %}

<section id="loginPage">

    <form method="post">

        {% if error %}

            <div class="flashMessageError">{{ error.messageKey|trans(error.messageData, 'security') }}</div>

        {% endif %}

        {% if app.user %}

            <div class="loged">

                Déja Connecté En Tant Que :  {{ app.user.pseudo }}<br> <a href="{{ path('app_logout') }}">Se Déconnecter</a>

            </div>

        {% endif %}

        <div class="login-box">

            <h2>Se Connecter</h2>

            <div class="user-box">

                {# <label for="inputEmail"></label> #}
                <input type="email" value="{{ last_username }}" name="email"  autocomplete="email" required autofocus>
                <label>@ E-mail</label>

            </div>

            <div class="user-box">

                {# <label for="inputPassword"></label> #}
                <input type="password" name="password"  autocomplete="current-password" required>
                <label>Mot De Passe</label>

            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <a href="{{ path('app_forgot_password_request') }}" class="resetLink">Mot De Passe Oublié</a>

        

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

            <button type="submit">
                Se Connecter
                <span></span>
                <span></span>
                <span></span>
                <span></span>
            </button>

        </div>


    </form>

</section>

{% endblock %}
